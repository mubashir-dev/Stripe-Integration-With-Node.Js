{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "pretty": true,
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "typeRoots": ["./node_module/@types", "./src/types/express"]
    },
}
